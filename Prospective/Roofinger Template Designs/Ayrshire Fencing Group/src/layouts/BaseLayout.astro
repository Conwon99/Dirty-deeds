---
import '../styles/global.css';

interface Props {
  title: string;
}

const { title } = Astro.props;

// Canonical phone number for SEO and structured data
const CANONICAL_PHONE = "07926 592704";
const CANONICAL_PHONE_TEL = "+447926592704";
---

<!doctype html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="description" content="Ayrshire Fencing Group - Reliable fencing contractors in Irvine, North Ayrshire. Bespoke fencing, sheds & gates, trellis, decking, palisade fencing, and fencing repairs. Free quotes, insured contractors, over 13 years' experience." />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <meta name="generator" content={Astro.generator} />
    <title>{title}</title>
    <script type="application/ld+json" set:html={JSON.stringify({
      "@context": "https://schema.org",
      "@type": "LocalBusiness",
      "name": "Ayrshire Fencing Group",
      "description": "Fully qualified and insured fencing and decking specialists. Bespoke Fencing, Sheds & Gates, Trellis, Decking, Palisade Fencing, Fencing Repairs across Ayrshire. Over 13 years' experience.",
      "telephone": CANONICAL_PHONE_TEL,
      "email": "ayrshirefencinggroup@outlook.com",
      "address": {
        "@type": "PostalAddress",
        "addressLocality": "Irvine",
        "addressRegion": "North Ayrshire",
        "addressCountry": "GB"
      },
      "areaServed": {
        "@type": "City",
        "name": "Ayrshire"
      },
      "url": Astro.url.origin,
      "priceRange": "$$",
      "aggregateRating": {
        "@type": "AggregateRating",
        "ratingValue": "5.0",
        "reviewCount": "16"
      }
    })} />
  </head>
  <body>
    <slot />
  </body>
</html>

